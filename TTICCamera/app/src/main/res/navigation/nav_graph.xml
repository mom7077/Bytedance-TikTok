<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ttic.camera.ui.splash.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splash_to_album"
            app:destination="@id/albumFragment" />
    </fragment>

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.ttic.camera.ui.album.AlbumFragment"
        android:label="Album">
        <action
            android:id="@+id/action_album_to_preview"
            app:destination="@id/previewFragment" />
        <action
            android:id="@+id/action_album_to_editor"
            app:destination="@id/editorFragment" />
    </fragment>

    <fragment
        android:id="@+id/previewFragment"
        android:name="com.ttic.camera.ui.preview.PreviewFragment"
        android:label="Preview">
        <argument
            android:name="imageUri"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_preview_to_editor"
            app:destination="@id/editorFragment" />
    </fragment>

    <fragment
        android:id="@+id/editorFragment"
        android:name="com.ttic.camera.ui.editor.EditorFragment"
        android:label="Editor">
        <argument
            android:name="imageUri"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

</navigation>
